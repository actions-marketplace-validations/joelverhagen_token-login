<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>NuGet.TokenCredentialProvider</RootNamespace>
    <AssemblyName>NuGet.TokenCredentialProvider</AssemblyName>
  </PropertyGroup>

  <PropertyGroup>
    <NuGetPluginPath>$([MSBuild]::EnsureTrailingSlash('$(USERPROFILE)')).nuget\plugins\netfx\$(AssemblyName)\</NuGetPluginPath>
    <PublishDir>$(NuGetPluginPath)</PublishDir>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="NuGet.Protocol" Version="6.8.0" />
  </ItemGroup>
  
</Project>
